<div class="navbar-wagon-item hidden-md hidden-lg">
  <% if user_signed_in? %>
  <div class="navbar-wagon-item">
    <% if current_user.subscribed? %>
          <h5> Séances illimitées </h5>

        <% else %>
          <h5>Séances <span class="circle"><%= current_user.tickets_nb %></span></h5>
    <% end %>
  </div>


<div class="navbar-wagon-item">
        <% unless current_user.subscribed? %>
          <%= link_to main_app.orders_path, class: "navbar-wagon-link" do %>
            Acheter des séances
          <% end %>
        <% end %>
        </div>



<% end %>

<div class="dropdown">
  <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
  <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
    <% if user_signed_in? %>
    <% if current_user.is_coach %>
    <li><%= link_to 'Gérer ma ville', main_app.trainings_path, class: "navbar-wagon-link" %></li>
    <% else %>
    <li><%= link_to 'Mes entraînements à venir', main_app.bookings_path %></li>
    <% end %>
    <li>
      <%= link_to main_app.user_path(current_user) do %>
      Mon profil
      <% end %>
    </li>
    <li>
      <%= link_to main_app.destroy_user_session_path, method: :delete do %>
      <%= t "shared.navbar.sign_out", default: "Me déconnecter" %>
      <% end %>
    </li>
    <% else %>
    <li>
      <!-- Login text link -->
      <%= link_to "Me connecter", main_app.new_user_session_path %>
    </li>
    <li>
      <!-- Signup text link -->
      <%= link_to "M'inscrire", main_app.new_user_registration_path %>
    </li>
    <% end %>
  </ul>
</div>
</div>
