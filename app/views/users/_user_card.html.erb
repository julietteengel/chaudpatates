<div class="member">
<% unless city_member.nil? %>


<%
img_url = city_member.linkedin_picture_url
res = Net::HTTP.get_response(URI.parse(img_url))
img_url = "https://res.cloudinary.com/ind-pendant/image/upload/v1478766698/user_mkbsoj.png" unless res.code.to_i >= 200 && res.code.to_i < 400
%>

  <% if img_url && city_member.linkedin_profile %>
    <%= link_to city_member.linkedin_profile, target: "_blank" do %>
      <%= image_tag img_url, width: 80, height: 80, crop: :fill,  class: "avatar-big"%>
    <% end %>
  <% elsif img_url && city_member.linkedin_profile.nil? %>
<!-- TODO : coder helper pour check if an image was found on a web site -->

    <% if city_member.photo.nil? %>
      <%= image_tag img_url, width: 80, height: 80, crop: :fill,  class: "avatar-big"%>
    <% else %>
      <%= cl_image_tag city_member.photo.path, width: 160, height: 160, crop: :fill, secure: true, class: "avatar-big"%>
    <% end %>
  <% elsif city_member.photo %>
  <%= cl_image_tag city_member.photo.path, height: '120', width: '120', crop: :fill, class: "avatar-big" %>
  <% else %>
    <%= image_tag "https://res.cloudinary.com/ind-pendant/image/upload/v1478766698/user_mkbsoj.png", width: 80, height: 80, crop: :fill, class: "avatar-big" %>
  <% end %>
  <p><%= city_member.first_name %></p>
 <% end %>
</div>

